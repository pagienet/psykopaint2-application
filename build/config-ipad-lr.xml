<?xml version="1.0" encoding="utf-8" standalone="no"?>
<application xmlns="http://ns.adobe.com/air/application/3.6">
    <id>com.psykosoft.psykopaint2</id>
    <filename>Psykopaint2</filename>
    <name>Psykopaint2</name>
    <versionNumber>0.4.5</versionNumber>
    <initialWindow>
        <content>SWF file name is set automatically at compile time</content>
        <aspectRatio>landscape</aspectRatio>
        <autoOrients>true</autoOrients>
        <fullScreen>true</fullScreen>
        <renderMode>direct</renderMode>
		<depthAndStencil>true</depthAndStencil>
    </initialWindow>
    <iPhone>
        <InfoAdditions>
            <![CDATA[
            <key>UIDeviceFamily</key>
            <array>
                <string>2</string>
            </array>
            ]]>
        </InfoAdditions>
        <requestedDisplayResolution>low</requestedDisplayResolution>
    </iPhone>
    <extensions>
        <extensionID>net.psykosoft.notifications</extensionID>
        <extensionID>net.psykosoft.photos</extensionID>
		<extensionID>net.psykosoft.gyroscope</extensionID>
    </extensions>
	<icon>
        <image57x57>core-packaged/icon57.png</image57x57>
        <image72x72>core-packaged/icon72.png</image72x72>
        <image114x114>core-packaged/icon114.png</image114x114>
        <image144x144>core-packaged/icon144.png</image144x144>
    </icon>
</application>
